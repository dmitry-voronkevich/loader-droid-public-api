<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="@string/ldapi_dialog_install_description"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ld_icon"
            android:drawablePadding="9dp"
            android:gravity="center_vertical"
            android:padding="9dp"
            android:text="@string/ldapi_dialog_install_brief_intro"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:text="@string/ldapi_dialog_install_highlits"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:text="@string/ldapi_dialog_install_help"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <Button
            android:id="@+id/btn_goto_google_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dip"
            android:drawableLeft="@drawable/ic_googleplay"
            android:drawablePadding="15dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:text="Google Play" />
        
		<Button
            android:id="@+id/btn_goto_slideme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dip"
            android:drawableLeft="@drawable/ic_slideme"
            android:drawablePadding="15dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:text="SlideMe" />
		
		<Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dip"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dip"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="@android:string/cancel" />
    </LinearLayout>

</ScrollView>